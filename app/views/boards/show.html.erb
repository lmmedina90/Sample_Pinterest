<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>About:</strong>
  <%= @board.about %>
</p>

<p>
  <strong>Users Who Have Posted To This Board</strong>
  <%= @board.user.full_name %>
</p>

<p>
  <strong>Pins On This Board</strong>
  <% @pins.each do |pin| %>
    <%= image_tag(pin.image_url, :width => 500) if pin.image.present? %>
  <% end %>

</p>

<div id="navbar2">
  <table>
    <td><%= link_to 'Edit', edit_board_path(@board) %></td>
    <td><%= link_to 'Back', boards_path %></td>
  </table>
</div>